package me.mickyjou.main;

import java.io.File;
import java.io.IOException;

import org.bukkit.Bukkit;
import org.bukkit.command.Command;
import org.bukkit.command.CommandExecutor;
import org.bukkit.command.CommandSender;
import org.bukkit.configuration.file.FileConfiguration;
import org.bukkit.configuration.file.YamlConfiguration;
import org.bukkit.entity.Player;

import net.md_5.bungee.api.ChatColor;

public class GemCommands implements CommandExecutor {
	
	private main plugin;
	private Player sender;
	private java.util.UUID uuid;

	public GemCommands(main plugin) {
		this.plugin = plugin;
	}

	public boolean isUser(String name) {
		Player s = Bukkit.getPlayer(name);
		if (s != null) {
			return true;
		} else {
			return false;
		}
	}

	@Override
	public boolean onCommand(CommandSender sender, Command cmd, String cmdlabel, String[] args) {
		Player p = (Player) sender;

		if (args.length == 0) {
			p.sendMessage("§7You've got §6" + getGems(p.getUniqueId()) + " §7Gems!");

		} else if (args.length == 3) {
			if (p.hasPermission("gems.add")) {
				
				//Admin-Commands

				if (args.length == 3) {
					if(p.hasPermission("gems.add")) {
					if (args[0].equalsIgnoreCase("add")) {
						String receiver = args[1];
						Integer amount = Integer.valueOf(args[2]);
						addGems(receiver, amount);
						p.sendMessage("§6" + receiver + " §7got §6" + args[2] + " §7Gems!");
						Player s = Bukkit.getPlayer(receiver);
						if (s != null) {
							s.sendMessage("§7You've got §6" + args[2] + " §7by Mickyjou!");
						}
					}
					} else {
						p.sendMessage(ChatColor.RED + "You dont have permissions for that!");
					}

				} else {
					p.sendMessage("§cWrong usage!");
				}

				if (args.length == 3) {
					if (p.hasPermission("gems.remove")) {
						if (args[0].equalsIgnoreCase("remove")) {
							String receiver = args[1];
							Integer amount = Integer.valueOf(args[2]);
							if(0>amount) {
								p.sendMessage("test");
							}
							if (amount != 0) {
								if (amount >= 0) {
									

									removeGems(receiver, amount);
									p.sendMessage("§6" + receiver + " §7lost §6" + args[2] + " §7Gems!");
									Player s = Bukkit.getPlayer(receiver);
									if (s != null) {
										s.sendMessage(
												"§7You lost §6" + args[2] + " §7Gems by §6" + p.getName() + " §7!");
									}

								} else {
									p.sendMessage("§cThe Player §6" + receiver + " §cdon't have enough Gems for that!");
								}
							} else {
								p.sendMessage("§cThe amount can't be 0!");
							}
						}
					} else {
						p.sendMessage(ChatColor.RED + "You dont have permissions for that!");
					}
				} else {
					p.sendMessage("§cWrong usage!");
				}
				if (args.length == 3) {
					if (p.hasPermission("gems.set")) {
						if (args[0].equalsIgnoreCase("set")) {
							String receiver = args[1];
							Integer amount = Integer.valueOf(args[2]);
							setGems(receiver, amount);

							p.sendMessage("§7The Gems of §6" + receiver + " §7was set to §6" + args[2] + "§7!");
							Player s = Bukkit.getPlayer(receiver);
							if (s != null) {
								s.sendMessage("§7Your gems was set to §6" + args[2] + " §7by §6" + p.getName() + "§7!");
							} else {
								p.sendMessage("§7The player §6" + s + " §7isn't online!");
							}
						}

					} else {
						p.sendMessage(ChatColor.RED + "You dont have permissions for that!");
					}
				} else {
					p.sendMessage("§cWrong usage!");
				}

			} else {
				p.sendMessage("§cYou dont have Permissions for that!");
			}

		} else {
			p.sendMessage("§cWrong usage!");
		}

		return true;
	}

	public Integer getGems(java.util.UUID uuid) {
		File file = new File("plugins/GemSystem", "gems.yml");
		FileConfiguration cfg = YamlConfiguration.loadConfiguration(file);

		int gems = cfg.getInt(uuid + ".gems");
		return gems;

	}

	public void addGems(String name, int amount) {
		File file = new File("plugins/GemSystem", "gems.yml");
		FileConfiguration cfg = YamlConfiguration.loadConfiguration(file);
		Player p = (Player) sender;

		int gems = cfg.getInt(UUID.getUUID(name) + ".gems");
		gems = gems + amount;
		cfg.set(UUID.getUUID(name) + ".gems", gems);
		try {
			cfg.save(file);
		} catch (IOException e) {
			e.printStackTrace();
		}

	}

	public void removeGems(String name, int amount) {
		File file = new File("plugins/GemSystem", "gems.yml");
		FileConfiguration cfg = YamlConfiguration.loadConfiguration(file);
		int gems = cfg.getInt(UUID.getUUID(name) + ".gems");
		gems = gems - amount;
		cfg.set(UUID.getUUID(name) + ".gems", gems);
		try {
			cfg.save(file);
		} catch (IOException e) {
			e.printStackTrace();
		}

	}

	public void setGems(String name, int amount) {

		File file = new File("plugins/GemSystem", "gems.yml");
		FileConfiguration cfg = YamlConfiguration.loadConfiguration(file);

		cfg.set(UUID.getUUID(name) + ".gems", amount);
		try {
			cfg.save(file);
		} catch (IOException e) {
			e.printStackTrace();
		}

	}

}
